@model List<APIHomeWork.Models.Article>;

@{
    ViewData["Title"] = "Latest News";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null || !Model.Any())
{
    <p>No articles found.</p>
}
else
{
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(article.UrlToImage))
                    {
                        <img src="@article.UrlToImage" class="card-img-top" alt="News Image" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Description</p>
                        <small class="text-muted">Published: @article.PublishedAt.ToString("yyyy-MM-dd HH:mm")</small>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <a href="@article.Url" target="_blank" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
}